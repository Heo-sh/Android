<?xml version="1.0" encoding="utf-8"?>
<!--
set: 여러 개의 속성(투명도, 좌표, 회전)을 하나로 묶어서 관리할 수 있도록 해주는 영역
-->
<set xmlns:android="http://schemas.android.com/apk/res/android">
    <!--숨겨져 있던 메뉴를 보여주는 animation 처리-->
    <!--
    android:fromAlpha -> animation 시작값, 0.0이면 완전 투명
    android:toAlpha -> 끝값, 알파값 1.0이면 완전 불투명
    android:duration -> 진행시간 ms
    -->
    <alpha android:fromAlpha="0.0"
        android:toAlpha="1.0"
        android:duration="500"/>

    <!--
    android:fromXDelta -> 처음 X좌표의 위치
    android:toXDelta -> 끝 X좌표의 위치
    android:fromYDelta -> 처음 Y좌표의 위치
    android:toYDelta -> 끝 Y좌표의 위치
    -->
    <translate android:fromXDelta="0%p"
        android:toXDelta="0%p"
        android:fromYDelta="0%p"
        android:toYDelta="0%p"
        android:duration="500"/>
</set>